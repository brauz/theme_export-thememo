<style>
  .global-elements-table {
    margin: 10px 0;
    border-collapse: collapse;
  }

  .global-elements-table td {
    border: 1px solid #ccc;
    padding: 10px 20px;
  }

  .global-elements-table td > p {
    margin: 10px 0;
