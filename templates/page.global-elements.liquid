{% comment %} PRODUCT CARD {% endcomment %}
<table class="global-elements-table">
  <tr>
    <td>
      <h2>Product card</h2>
      {% comment %} <p>Use: <mark>render 'pd-image', image: '[image object]'</mark></p> {% endcomment %}
    </td>
    <td>
      <div style="max-width: 300px">
        {% assign card_product = all_products['apline-pom-pom-beanie-raspberry-1'] %}
        {% render 'card-product', 
          card_product: card_product,
          show_description: true
        %}
      </div>
    </td>
    <td>
      <h3>Usage:</h3>
      <p><mark>render 'card-product', card_product: product</mark></p>
      <h3>Params:</h3>
      <p><mark>card_product</mark> - product object (required)</p>
      <p><mark>hide_secondary_image</mark> - To hide 2nd image. Default: false</p>
      <p><mark>hide_vendor</mark> - To hide vendor. Default: false</p>
      <p><mark>hide_rating</mark> - To hide rating. Default: false</p>
      <p><mark>show_description</mark> - To show description. Default: false. Field: <mark>product.metafields.card.short_description</mark></p>
    </td>
  </tr>
</table>
