{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background: linear-gradient(0deg, rgba(255, 161, 136, 0.50) 0%, rgba(255, 161, 136, 0.50) 100%), linear-gradient(93deg, #FFF 0%, rgba(255, 255, 255, 0.00) 100%), url({{ 'grid.png' | asset_url }}), lightgray 0% 0% / 50px 50px repeat;
  }

  .section-{{ section.id }}-padding .pd-decoration-banner__heading,
  .section-{{ section.id }}-padding .pd-decoration-banner__description {
    color: {{ section.settings.text_color }};
  }

  .section-{{ section.id }}-padding .pd-decoration-banner__button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="pd-decoration-banner section-{{ section.id }}-padding">
  <div class="page-width pd-decoration-banner__inner">
    <div class="pd-decoration-banner__text-item">
      {% if section.settings.heading %}
        <h2 class="pd-decoration-banner__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description %}
        <div class="pd-decoration-banner__description">{{ section.settings.description }}</div>
      {% endif %}
    </div>
    <div class="pd-decoration-banner__button-item">
      {% if section.settings.button_label %}
        <a class="pd-button pd-decoration-banner__button" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Decoration banner",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#0A2657"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "color",
        "id": "button_bg_color",
        "label": "Button background color",
        "default": "#0554FF"
      },
      {
        "type": "color",
        "id": "button_text_color",
        "label": "Button text color",
        "default": "#FCFCFD"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Decoration banner"
      }
    ]
  }
{% endschema %}
