{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.bg_color }};
  }

  .section-{{ section.id }}-padding .slick-arrow {
    background-color: {{ section.settings.arrow_color }};
  }

  .section-{{ section.id }}-padding .pd-product-carousel__heading {
    color: {{ section.settings.heading_color }};
  }

  .section-{{ section.id }}-padding .pd-product-carousel__description {
    color: {{ section.settings.description_color }};
  }

  .section-{{ section.id }}-padding .pd-carousel-scrollbar {
    background-color: {{ section.settings.scrollbar_color }};
  }

  .section-{{ section.id }}-padding .pd-carousel-scrollbar-piece {
    background-color: {{ section.settings.scrollbar_piece_color }};
  }

  .section-{{ section.id }}-padding .pd-product-carousel__slider.pd-container-with-scrollbar::-webkit-scrollbar-thumb {
    background-color: {{ section.settings.scrollbar_piece_color }};
  }

  .section-{{ section.id }}-padding .pd-product-carousel__slider.pd-container-with-scrollbar-overflow::-webkit-scrollbar-track {
    background-color: {{ section.settings.bg_color }};
  }

  .section-{{ section.id }}-padding .pd-product-carousel__slider.pd-container-with-scrollbar::-webkit-scrollbar-track-piece {
    background-color: {{ section.settings.scrollbar_color }};
  }

  .section-{{ section.id }}-padding .pd-product-carousel__button .pd-button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border-color: {{ section.settings.button_bg_color }};
  }

  .section-{{ section.id }}-padding.no-carousel .pd-product-carousel__slider {
    display: grid;
    grid-template-columns: repeat({{ section.settings.number_products_showing }}, 1fr);
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }}-padding .pd-product-carousel__main-content {
      width: {{ section.settings.width_desktop }}%;
    }
  }
{%- endstyle -%}

{% if section.settings.get_related_product %}
  {% render 'pd-related-products' %}
{% else %}
  {% render 'pd-product-carousel' %}
{% endif %}

