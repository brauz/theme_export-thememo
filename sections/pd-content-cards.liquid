{% render 'pd-content-cards' %}

{% schema %}
{
  "name": "Content cards",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "container_fluid_desktop",
      "label": "Container fluid on desktop"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "range",
      "id": "card_spacing",
      "label": "Card spacing",
      "min": 0,
      "max": 24,
      "step": 4,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "free_height",
      "label": "Free height?"
    },
    {
      "type": "header",
      "content": "Mobile layout"
    },
    {
      "type": "checkbox",
      "id": "horizontal_scrolling",
      "label": "Horizontal scrolling?"
    }
  ],
  "blocks": [
    {
      "type": "content-card",
      "name": "Content card",
      "settings": [
        {
          "type": "select",
          "id": "card_style",
          "label": "Card style",
          "options": [
            {
              "label": "Default",
              "value": ""
            },
            {
              "label": "Text overlay",
              "value": "text-overlay"
            },
            {
              "label": "Image left - Text right",
              "value": "image-left"
            },
            {
              "label": "Image right - Text left",
              "value": "image-right"
            }
          ]
        },
        {
          "type": "checkbox",
          "id": "info_first_mobile",
          "label": "Info first - mobile"
        },
        {
          "type": "select",
          "id": "card_width",
          "label": "Card width",
          "options": [
            {
              "label": "100%",
              "value": "100%"
            },
            {
              "label": "1/3",
              "value": "33.3%"
            },
            {
              "label": "1/2",
              "value": "50%"
            },
            {
              "label": "2/3",
              "value": "66.6%"
            }
          ]
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background color"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color"
        },
        {
          "type": "color",
          "id": "overlay_bg_color",
          "label": "Overlay background color (for Text Overlay type only)",
          "default": "#000"
        },
        {
          "type": "range",
          "id": "overlay_bg_opacity",
          "label": "Overlay background color (for Text Overlay type only)",
          "min": 0,
          "max": 1,
          "step": 0.1,
          "default": 0
        },
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image mobile"
        },
        {
          "type": "header",
          "content": "Padding"
        },
        {
          "type": "range",
          "id": "image_padding_top",
          "label": "Image padding top",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_right",
          "label": "Image padding right",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_bottom",
          "label": "Image padding bottom",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_left",
          "label": "Image padding left",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "select",
          "id": "image_padding_unit",
          "label": "Image padding unit",
          "options": [
            {
              "label": "%",
              "value": "%"
            },
            {
              "label": "px",
              "value": "px"
            }
          ],
          "default": "%"
        },
        {
          "type": "checkbox",
          "id": "use_mobile_padding",
          "label": "Use mobile padding"
        },
        {
          "type": "range",
          "id": "image_padding_top_mobile",
          "label": "Image padding top - mobile",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_right_mobile",
          "label": "Image padding right - mobile",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_bottom_mobile",
          "label": "Image padding bottom - mobile",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_left_mobile",
          "label": "Image padding left - mobile",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "select",
          "id": "image_padding_unit_mobile",
          "label": "Image padding unit - mobile",
          "options": [
            {
              "label": "%",
              "value": "%"
            },
            {
              "label": "px",
              "value": "px"
            }
          ],
          "default": "%"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "options": [
            {
              "label": "Default",
              "value": ""
            },
            {
              "label": "Bold Coral",
              "value": "pd-button--bold-coral"
            },
            {
              "label": "Happy Lemonlime",
              "value": "pd-button--happy-lemonlime"
            },
            {
              "label": "Strong Dark Blue",
              "value": "pd-button--strong-dark-blue"
            },
            {
              "label": "Lively Blue",
              "value": "pd-button--lively-blue"
            }
          ]
        },
        {
          "type": "checkbox",
          "id": "use_custom_button_styles",
          "label": "Use custom button styles"
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Background color"
        },
        {
          "type": "color",
          "id": "button_border_color",
          "label": "Border color"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Text color"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Content cards"
    }
  ]
}
{% endschema %}