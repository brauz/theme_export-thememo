{% style %}
  @media screen and (min-width: 1199px) {
    .section-{{ section.id }} {
      background-image: url("{{ 'bg-decoration.png' | asset_url }}");
    }
  }
{% endstyle %}

<div class="main-blog-landing section-{{ section.id }}">
  <div class="page-width">
    {% render 'breadcrumbs' %}
    {% if section.settings.heading %}
      <h2 class="main-blog-landing__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading %}
      <h3 class="main-blog-landing__subheading">
        <span>{{ section.settings.subheading }}</span>
      </h2>
    {% endif %}
    {% if section.settings.description %}
      <div class="main-blog-landing__description">{{ section.settings.description }}</div>
    {% endif %}
    {% if section.settings.button_label != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="pd-button pd-button--bold-coral main-blog-landing__button"
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>

  <div id="anchor-bar" class="main-blog-landing__nav">
    <div class="page-width main-blog-landing__nav__wrapper">
      <span class="main-blog-landing__nav__title">Jump to section</span>
      <ul class="main-blog-landing__nav__list pd-container-with-scrollbar pd-container-with-scrollbar-mobile pd-container-with-scrollbar-overflow">
        {% for block in section.blocks %}
          <li class="main-blog-landing__nav__item">
            <a
              class="js-anchor-link main-blog-landing__nav__link"
              href="#{{ block.settings.anchor_id }}"
            >
              {{ block.settings.text_display }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Main blog landing",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "the Notepad"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Pregnancy"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "name": "Anchor item",
      "type": "anchor_item",
      "settings": [
        {
          "type": "text",
          "id": "anchor_id",
          "label": "Anchor id",
          "info": "Section id to jump to"
        },
        {
          "type": "text",
          "id": "text_display",
          "label": "Text display"
        }
      ]
    }
  ]
}
{% endschema %}
