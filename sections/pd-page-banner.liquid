{% render 'pd-page-banner' %}

{% schema %}
{
  "name": "Page banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show breadcrumbs"
    },
    {
      "type": "color",
      "id": "breadcrums_text_color",
      "label": "Breadcrumb text color"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image banner"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image banner mobile"
    },
    {
      "type": "range",
      "id": "width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Width",
      "default": 100,
      "info": "Only apply on desktop"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_type",
      "label": "Heading type",
      "options": [
        {
          "value": "h1",
          "label":  "H1"
        },
        {
          "value": "h2",
          "label":  "H2"
        },
        {
          "value": "h3",
          "label":  "H3"
        },
        {
          "value": "h4",
          "label":  "H4"
        },
        {
          "value": "h5",
          "label":  "H5"
        },
        {
          "value": "h6",
          "label":  "H6"
        }
      ],
      "default": "h2"
    },
    {
      "type": "color",
      "id": "heading_text_color",
      "label": "Heading text color"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "description_text_color",
      "label": "Description text color"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "options": [
        {
          "value": "under-image",
          "label": "Under image"
        },
        {
          "value": "over-image",
          "label": "Over image"
        }
      ],
      "default": "under-image"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment (Desktop)",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_alignment_mobile",
      "label": "Text alignment (Mobile)",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "flex-start"
    },
    {
      "type": "image_picker",
      "id": "decoration_image",
      "label": "Decoration image"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button url"
        },
       {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "options": [
            {
              "label": "Default",
              "value": ""
            },
            {
              "label": "Bold Coral",
              "value": "pd-button--bold-coral"
            },
            {
              "label": "Happy Lemonlime",
              "value": "pd-button--happy-lemonlime"
            },
            {
              "label": "Strong Dark Blue",
              "value": "pd-button--strong-dark-blue"
            },
            {
              "label": "Lively Blue",
              "value": "pd-button--lively-blue"
            }
          ]
        },
        {
          "type": "checkbox",
          "id": "is_button_outline",
          "label": "Button outline?",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "is_button_big",
          "label": "Big button?",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Page banner"
    }
  ]
}
{% endschema %}
