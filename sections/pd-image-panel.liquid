{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-color {
    background-color: {{ section.settings.bg_color }};
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    {% unless section.settings.container_fluid %}
      .section-{{ section.id }}-padding .pd-image-panel__inner {
        height: {{ section.settings.height }}px;
      }
    {% endunless %}
  }
{%- endstyle -%}



<div class="section-{{ section.id }}-padding section-{{ section.id }}-color pd-image-panel">
  <div
    class="{% unless section.settings.container_fluid %}page-width {% endunless %}pd-image-panel__inner"
    style="--left-width: {{ section.settings.width_image_left }}%;"
  >
    {%- for block in section.blocks -%}
      {%- render 'pd-image-panel-item', block: block -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Image panel",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "container_fluid",
      "label": "Container fluid"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "background color"
    },
    {
      "type": "range",
      "id": "height",
      "min": 500,
      "max": 1000,
      "step": 5,
      "unit": "px",
      "label": "Banner Height",
      "info": "Only apply when container is NOT fluid",
      "default": 750
    },
    {
      "type": "range",
      "id": "width_image_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Width image left",
      "info": "Right image will be 100% - width image left (desktop only)",
      "default": 50
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image mobile"
        },
        {
          "type": "select",
          "id": "image_alignment",
          "label": "Image alignment",
          "options": [
            {
              "value": "start",
              "label": "Start"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "end",
              "label": "End"
            }
          ],
          "default": "start"
        },
        {
          "type": "header",
          "content": "Padding"
        },
        {
          "type": "range",
          "id": "image_padding_top",
          "label": "Image padding top",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_right",
          "label": "Image padding right",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_bottom",
          "label": "Image padding bottom",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_left",
          "label": "Image padding left",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "select",
          "id": "image_padding_unit",
          "label": "Image padding unit",
          "options": [
            {
              "label": "%",
              "value": "%"
            },
            {
              "label": "px",
              "value": "px"
            }
          ],
          "default": "%"
        },
        {
          "type": "checkbox",
          "id": "use_mobile_padding",
          "label": "Use mobile padding"
        },
        {
          "type": "range",
          "id": "image_padding_top_mobile",
          "label": "Image padding top - mobile",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_right_mobile",
          "label": "Image padding right - mobile",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_bottom_mobile",
          "label": "Image padding bottom - mobile",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "image_padding_left_mobile",
          "label": "Image padding left - mobile",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "select",
          "id": "image_padding_unit_mobile",
          "label": "Image padding unit - mobile",
          "options": [
            {
              "label": "%",
              "value": "%"
            },
            {
              "label": "px",
              "value": "px"
            }
          ],
          "default": "%"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Image panel"
    }
  ]
}
{% endschema %}
