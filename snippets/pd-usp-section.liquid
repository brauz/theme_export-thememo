<style>
  [section-id="{{ section.id }}"] {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
  }

  @media screen and (max-width: 749px) {
    [section-id="{{ section.id }}"] {
      {% if section.settings.margin_top > 29 %}
        margin-top: {{ section.settings.margin_top | times: 0.6 }}px;
      {% endif %}
      {% if section.settings.margin_bottom > 29 %}
        margin-bottom: {{ section.settings.margin_bottom | times: 0.6 }}px;
      {% endif %}
      padding-top: {{ section.settings.padding_top | times: 0.6 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.6 }}px;
    }
  }
</style>

<div section-id="{{ section.id }}" class="usp-section">
  <div class="page-width">
    <div class="usp-section-items">
      {% for block in section.blocks %}
        <div class="usp-section-item">
          {% if block.settings.icon != blank %}
            {% render 'pd-image', image: block.settings.icon %}
          {% endif %}
          <p class="usp-section-item__text">{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>