<style>
  [section-id="{{ section.id }}"] {
    background-color: {{ section.settings.bg_color }};
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    color: {{ section.settings.text_color }};
  }
</style>

<div section-id="{{ section.id }}" class="ctas-panel">
  <div class="page-width">
    <div class="ctas-panel-inner">
      {% for block in section.blocks %}
        {% if block.type == 'button' %}
          <a href="{{ block.settings.button_url }}" class="pd-button {{ block.settings.button_style }} {% if block.settings.is_button_outline %} pd-button--outline{% endif %}">{{ block.settings.button_label }}</a>
        {% endif %}
        {% if block.type == 'text' %}
          <div class="ctas-panel-text">{{ block.settings.text }}</div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>